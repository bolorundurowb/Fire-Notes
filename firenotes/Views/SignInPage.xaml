<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="firenotes.Views.SignInPage"
    Padding="20">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="Fill">
            <Label Text="Sign In" HorizontalOptions="Center" FontSize="25" Margin="0, 20, 0, 20" FontAttributes="Bold"/>
            
            <Label Text="Username:" />
            <Entry x:Name="txtUsername" HorizontalOptions="Fill" HeightRequest="35" />
            
            <Label Text="Password:" Margin="0, 10, 0, 0"/>
            <Entry x:Name="txtPassword" HorizontalOptions="Fill" HeightRequest="35" IsPassword="true" />
            
            <Button x:Name="btnSignIn" Text="Sign In" Margin="0, 20" HorizontalOptions="Center"/>

            <ActivityIndicator x:Name="spnrLoading" IsVisible="false" HorizontalOptions="Center" WidthRequest="20" HeightRequest="20" IsRunning="true"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="EndAndExpand">
                <Label Text="don't have an account? " FontSize="15"/>
                <Label x:Name="lblsignUp" Text="sign up!" TextColor="#0080FF" FontSize="15" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
